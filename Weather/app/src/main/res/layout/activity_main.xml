<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ychav.weather.MainActivity">


    <TextView
        android:text="Pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textViewPais"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextPais"
        android:layout_alignBaseline="@+id/textViewPais"
        android:layout_alignBottom="@+id/textViewPais"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/editTextPais"
        android:layout_alignRight="@+id/editTextPais"
        android:layout_alignEnd="@+id/editTextPais"
        android:id="@+id/editTextCiudad" />

    <Button
        android:text="Ver Clima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/buttonBuscar"
        android:layout_below="@+id/editTextCiudad"
        android:layout_alignLeft="@+id/editTextCiudad"
        android:layout_alignStart="@+id/editTextCiudad" />

    <ImageView
        android:layout_width="800dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/shape_rectangle_stroke"
        android:layout_marginTop="35dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/buttonBuscar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCiudad"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/editTextCiudad"
        android:layout_alignBottom="@+id/editTextCiudad"
        android:layout_alignLeft="@+id/textViewPais"
        android:layout_alignStart="@+id/textViewPais" />

    <TextView
        android:text="temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textViewtemp"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:layout_marginTop="27dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/buttonBuscar"
        android:layout_toEndOf="@+id/buttonBuscar" />

    <ImageView
        android:layout_width="800dp"
        app:srcCompat="@drawable/shape_rectangle_stroke"
        android:id="@+id/imageView"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textViewEstadistics"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/textViewCiudad"
        android:layout_alignStart="@+id/textViewCiudad" />
</RelativeLayout>
